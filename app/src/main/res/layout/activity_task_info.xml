<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".TaskInfo">

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btn_configurarTarea"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/iv_imagen"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logocasa"
            android:layout_marginTop="100dp"/>
        <TextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task:"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TaskName"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miembros:"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_taskmembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_taskstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

</LinearLayout>