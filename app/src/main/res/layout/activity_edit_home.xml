<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".EditHome">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Hogar"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del hogar"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_marginLeft="20dp"
        android:id="@+id/et_nombreHogarEditar"
        android:text="Nombre del hogar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Escribe el nombre del hogar"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp"
        android:padding="10dp"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Permisos de ediciÃ³n"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:layout_marginLeft="20dp"
        android:id="@+id/rg_permisosEdicionEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_editarTodos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todos"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_editarSoloCreador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solo creador"
            android:textSize="18sp" />
    </RadioGroup>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones de tareas"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <Switch
        android:layout_marginLeft="20dp"
        android:id="@+id/switch_notificacionesEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar notificaciones"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_editarHogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar configuraciones"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"/>

</LinearLayout>